.container {
  padding: 20px;
  background-color: #f8f8f8;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.picker {
  display: flex;
  align-items: center;
  padding: 10px;
  background-color: #fff;
  border-radius: 5px;
}

.iconfont {
  margin-left: 10px;
  color: #888;
}

.stats {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  justify-content: space-between;
}

.stat-item {
  flex: 1;
  min-width: 48%;
  padding: 20px;
  background-color: #fff;
  border-radius: 5px;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.stat-label {
  margin-bottom: 10px;
  color: #666;
  font-size: 16px;
}

.stat-value {
  font-size: 24px;
  font-weight: bold;
}

.transactions {
  margin-top: 20px;
}

.transaction-item {
  padding: 15px;
  background-color: #fff;
  border-radius: 5px;
  margin-bottom: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.transaction-info {
  display: flex;
  align-items: center;
}

.category {
  margin-right: 10px;
  color: #888;
  font-size: 14px;
}

.amount {
  font-size: 16px;
  font-weight: bold;
}

.date {
  color: #888;
  font-size: 14px;
}
.button {
  padding: 10px 20px;
  background-color: #007aff;
  color: #fff;
  border-radius: 5px;
  transition: all 0.3s ease;
}

.button:active {
  background-color: #0052cc;
  transform: translateY(2px);
}